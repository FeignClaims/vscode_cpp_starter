{
  "tasks": [
    {
      "label": "CMake: build the active target",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--config",
        "${command:cmake.buildType}",
        "--target",
        "${command:cmake.buildTargetName}",
        "-j"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Clang-Tidy: fix current file",
      "command": "clang-tidy",
      "args": ["--fix-errors", "${file}"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Clang++: 编译单文件",
      "command": "clang++",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}/build/executable",
        "-g",
        "-stdlib=libc++",
        "-std=c++2b",
        "-fuse-ld=lld",
        "-fsanitize=address",
        "-fsanitize=undefined",
        "-pedantic",
        "-pthread",
        "-Wall",
        "-Wextra",
        "-Wcast-align",
        "-Wconversion",
        "-Wdouble-promotion",
        "-Wextra-semi",
        "-Wfloat-equal",
        "-Wformat=2",
        "-Wimplicit-fallthrough",
        "-Wmisleading-indentation",
        "-Wmissing-noreturn",
        "-Wno-braced-scalar-init",
        "-Wnon-virtual-dtor",
        "-Wnull-dereference",
        "-Wold-style-cast",
        "-Woverloaded-virtual",
        "-Wpacked",
        "-Wpedantic",
        "-Wpointer-arith",
        "-Wshadow",
        "-Wsign-conversion",
        "-Wundef",
        "-Wunused",
        "-ftemplate-backtrace-limit=0",
        "-I${workspaceFolder}/include",
        "-I${workspaceFolder}/extern/include",
        "-L${workspaceFolder}/extern/bin",
        "-lfmt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Clang++: 编译多文件",
      "command": "clang++",
      "args": [
        "${fileDirname}/*.cpp",
        "-o",
        "${workspaceFolder}/build/executable",
        "-g",
        "-stdlib=libc++",
        "-std=c++2b",
        "-fuse-ld=lld",
        "-fsanitize=address",
        "-fsanitize=undefined",
        "-pedantic",
        "-pthread",
        "-Wall",
        "-Wextra",
        "-Wcast-align",
        "-Wconversion",
        "-Wdouble-promotion",
        "-Wextra-semi",
        "-Wfloat-equal",
        "-Wformat=2",
        "-Wimplicit-fallthrough",
        "-Wmisleading-indentation",
        "-Wmissing-noreturn",
        "-Wno-braced-scalar-init",
        "-Wnon-virtual-dtor",
        "-Wnull-dereference",
        "-Wold-style-cast",
        "-Woverloaded-virtual",
        "-Wpacked",
        "-Wpedantic",
        "-Wpointer-arith",
        "-Wshadow",
        "-Wsign-conversion",
        "-Wundef",
        "-Wunused",
        "-ftemplate-backtrace-limit=0",
        "-I${workspaceFolder}/include",
        "-I${workspaceFolder}/extern/include",
        "-L${workspaceFolder}/extern/bin",
        "-lfmt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "g++: 编译单文件",
      "command": "g++-12",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}/build/executable",
        "-g",
        "-std=c++2b",
        "-pedantic",
        "-pthread",
        "-Wall",
        "-Wextra",
        "-Wcast-align",
        "-Wconversion",
        "-Wdisabled-optimization",
        "-Wdouble-promotion",
        "-Wduplicated-branches",
        "-Wduplicated-cond",
        "-Wextra-semi",
        "-Wfloat-equal",
        "-Wformat=2",
        "-Wimplicit-fallthrough",
        "-Winvalid-pch",
        "-Wlogical-op",
        "-Wmisleading-indentation",
        "-Wmissing-format-attribute",
        "-Wmissing-include-dirs",
        "-Wmissing-noreturn",
        "-Wnon-virtual-dtor",
        "-Wnull-dereference",
        "-Wold-style-cast",
        "-Woverloaded-virtual",
        "-Wpedantic",
        "-Wpointer-arith",
        "-Wredundant-decls",
        "-Wshadow",
        "-Wsign-conversion",
        "-Wundef",
        "-Wunused",
        "-Wuseless-cast",
        "-I${workspaceFolder}/include",
        "-I${workspaceFolder}/extern/include",
        "-L${workspaceFolder}/extern/bin",
        "-lfmt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "g++: 编译多文件",
      "command": "g++-12",
      "args": [
        "${fileDirname}/*.cpp",
        "-o",
        "${workspaceFolder}/build/executable",
        "-g",
        "-std=c++2b",
        "-pedantic",
        "-pthread",
        "-Wall",
        "-Wextra",
        "-Wcast-align",
        "-Wconversion",
        "-Wdisabled-optimization",
        "-Wdouble-promotion",
        "-Wduplicated-branches",
        "-Wduplicated-cond",
        "-Wextra-semi",
        "-Wfloat-equal",
        "-Wformat=2",
        "-Wimplicit-fallthrough",
        "-Winvalid-pch",
        "-Wlogical-op",
        "-Wmisleading-indentation",
        "-Wmissing-format-attribute",
        "-Wmissing-include-dirs",
        "-Wmissing-noreturn",
        "-Wnon-virtual-dtor",
        "-Wnull-dereference",
        "-Wold-style-cast",
        "-Woverloaded-virtual",
        "-Wpedantic",
        "-Wpointer-arith",
        "-Wredundant-decls",
        "-Wshadow",
        "-Wsign-conversion",
        "-Wundef",
        "-Wunused",
        "-Wuseless-cast",
        "-I${workspaceFolder}/include",
        "-I${workspaceFolder}/extern/include",
        "-L${workspaceFolder}/extern/bin",
        "-lfmt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "运行文件",
      "command": "${workspaceFolder}/build/executable",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Clang++: 编译并运行单文件",
      "command": "${workspaceFolder}/build/executable",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": ["Clang++: 编译单文件"]
    },
    {
      "type": "shell",
      "label": "Clang++: 编译并运行多文件",
      "command": "${workspaceFolder}/build/executable",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": ["Clang++: 编译单文件"]
    },
    {
      "type": "shell",
      "label": "g++: 编译并运行单文件",
      "command": "${workspaceFolder}/build/executable",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
