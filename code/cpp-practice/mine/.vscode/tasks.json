    {
      "type": "shell",
      "label": "g++: 编译并运行多文件",
      "command": "${workspaceFolder}/build/executable",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": ["g++: 编译单文件"]
    }
  ],
  "version": "2.0.0"
}
